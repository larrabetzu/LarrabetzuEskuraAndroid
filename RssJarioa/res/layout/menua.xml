<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zuria"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menua_andramari"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:scaleType="center"
            android:paddingBottom="5sp"
            android:background="@drawable/andramari"
            android:orientation="vertical"
            android:layout_weight="50"
            >
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7sp"
            android:layout_weight="1"
            >
           <Button
                android:drawableLeft="@drawable/paste"
                android:drawablePadding="35dp"
                android:gravity="left"
                android:id="@+id/btnberriak"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:onClick="onclickbtnberriak"
                android:paddingLeft="50dp"
                android:text="@string/text_berriak"
                android:textSize="25sp"
                  />
           <Button
                android:drawableLeft="@drawable/today"
                android:drawablePadding="35dp"
                android:gravity="left"
                android:id="@+id/btnagenda"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:onClick="onclickbtnagenda"
                android:paddingLeft="50dp"
                android:text="@string/text_agenda"
                android:textSize="25sp"
                  />
           <Button
                android:drawableLeft="@drawable/elkarteak"
                android:drawablePadding="35dp"
                android:gravity="left"
                android:id="@+id/btnelkarteak"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:onClick="onclickbtnelkarteak"
                android:paddingLeft="50dp"
                android:text="@string/text_elkarteak"
                android:textSize="25sp"
                />
            <!--
           <Button
                android:drawableLeft="@drawable/about"
                android:drawablePadding="35dp"
                android:gravity="left"
                android:id="@+id/btnzerbitzuak"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:onClick="onclickbtnzerbitzuak"
                android:paddingLeft="50dp"
                android:text="Zerbitzuak"
                android:textSize="25sp"
                />
                -->
           </LinearLayout>

        <LinearLayout
            android:id="@+id/menua_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7sp"
            android:layout_weight="1"
            >

             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_larrabetzu_eskura"
                 />

            <TextView
                android:id="@+id/menua_bertsioa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                 />
        </LinearLayout>


</LinearLayout>
