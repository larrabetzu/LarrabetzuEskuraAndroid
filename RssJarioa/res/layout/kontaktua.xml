
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/txtgaia"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaia: "
            android:textSize="23dp" 
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/Gaia"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textSize="15dp" >
           
       </EditText>

            
   </TableRow>
   
    <EditText
        android:id="@+id/testua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:lines="5"
        android:width="300dp" 
         android:hint="Hemen idatzitako Testua garatzaileari bidaliko da....."/>

    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingBottom="10dp">
    
    
     <Button
            android:id="@+id/deitu"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclickdeitu"
            android:text="Garatzaileari deitu"
            android:textSize="15dp" 
            />
    
     <Button
            android:id="@+id/bidali"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclickenviar"
            android:text="emaila bidali" 
            android:layout_gravity="right"
            android:textSize="15dp"
            />

     </TableRow>
</LinearLayout>